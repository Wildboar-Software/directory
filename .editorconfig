# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_size = 4
indent_style = tab
end_of_line = lf

[*.{sh,bash}]
indent_size = 4
end_of_line = lf

[*.{yml,yaml,md,prisma}]
indent_size = 2
indent_style = space
end_of_line = unset

[*.pem]
end_of_line = unset

[start-meerkat]
end_of_line = lf

[debian/**]
end_of_line = lf

[debian/rules]
indent_style = tab

[pkg/meerkat]
end_of_line = lf

[pkg/meerkat.spec]
end_of_line = lf

[pkg/apk/**]
end_of_line = lf

[pkg/PKGBUILD]
end_of_line = lf
