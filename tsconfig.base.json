{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "nodenext",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2022",
        "module": "nodenext",
        "lib": [],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "paths": {
            "@wildboar/idm": ["libs/idm/src/index.ts"],
            "@wildboar/ldap-socket": ["libs/ldap-socket/src/index.ts"],
            "@wildboar/ocsp-client": ["libs/ocsp-client/src/index.ts"],
            "@wildboar/osi-net": ["libs/osi-net/src/index.ts"],
            "@wildboar/parity-schema/*": ["libs/parity-schema/*"],
            "@wildboar/passport-x500": ["libs/passport-x500/src/index.ts"],
            "@wildboar/rose-transport": ["libs/rose-transport/src/index.ts"],
            "@wildboar/schema-level-ii": ["libs/schema-level-ii/src/index.ts"],
            "@wildboar/x500-auth": ["libs/x500-auth-ts/src/index.ts"],
            "@wildboar/x500-cli-config": ["libs/x500-cli-config/src/index.ts"],
            "@wildboar/x500-client-ts": ["libs/x500-client-ts/src/index.ts"],
            "x500-functional-tests": [
                "libs/x500-functional-tests/src/index.ts"
            ],
            "@meerkat/db": ["./libs/meerkatdb/src/index.ts"],
            "@meerkat/db2": ["meerkatdb2/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
