{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "ES2019",
        "module": "esnext",
        "lib": ["es2021", "es2017", "es2019", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "paths": {
            "@wildboar/idm": ["libs/idm/src/index.ts"],
            "@wildboar/ldap-socket": ["libs/ldap-socket/src/index.ts"],
            "@wildboar/meerkat-types": ["libs/meerkat-types/src/index.ts"],
            "@wildboar/ocsp-client": ["libs/ocsp-client/src/index.ts"],
            "@wildboar/osi-net": ["libs/osi-net/src/index.ts"],
            "@wildboar/parity-schema/*": ["libs/parity-schema/*"],
            "@wildboar/rose-transport": ["libs/rose-transport/src/index.ts"],
            "@wildboar/x500-cli-config": ["libs/x500-cli-config/src/index.ts"],
            "@wildboar/x500-client-ts": ["libs/x500-client-ts/src/index.ts"],
            "x500-functional-tests": ["libs/x500-functional-tests/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
