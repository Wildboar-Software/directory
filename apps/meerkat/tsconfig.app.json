{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "target": "es2022",
        "types": ["node"],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true
    },
    "exclude": [
        "**/*.spec.ts",
        "src/prisma/seed.ts",
        "**/seed.ts",
        "seed.ts",
        "vite.config.ts",
        "vite.config.mts",
        "vitest.config.ts",
        "vitest.config.mts",
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.tsx",
        "src/**/*.test.js",
        "src/**/*.spec.js",
        "src/**/*.test.jsx",
        "src/**/*.spec.jsx",
        "test/**/*",
    ],
    "include": ["**/*.ts"]
}
