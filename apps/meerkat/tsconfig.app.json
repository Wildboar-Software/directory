{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "module": "esnext",
        "target": "ES2022",
        "types": ["node"],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": false
    },
    "exclude": [
        "**/*.spec.ts",
        "src/prisma/seed.ts",
        "**/seed.ts",
        "seed.ts",
        "jest.config.ts"
    ],
    "include": ["**/*.ts"]
}
